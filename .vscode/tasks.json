{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/arch:AVX512",
                "/diagnostics:caret",
                "/DDEBUG",
                "/D_DEBUG",
                "/experimental:c11atomics", // need this for <stdatomic.h>
                "/F0x10485100",
                "/favor:INTEL64",
                "/fp:strict",
                "/fpcvt:IA",
                "/Gw",
                "/I./",
                "/I C:/Program Files/Python312/include/",
                "/MP",
                "/MTd",
                "/Qpar",
                "/Zc:preprocessor",
                "/Zi",
                "/nologo",
                "/TC",
                "/Wall",
                "/wd4710", // not inlined
                "/wd4711", // selected for inlining
                "/wd4820", // struct padding
                "/Od",
                "/std:clatest",
                "/Fe${fileDirname}/${fileBasenameNoExtension}.exe",
                "${file}",
                "/link /DEBUG:full"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang.exe build active file",
            "command": "C:/Program Files/LLVM/bin/clang.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-O0",
                "-std=c23",
                "-DDEBUG",
                "-D_DEBUG",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}
