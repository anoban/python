{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/arch:AVX512",
                "/diagnostics:caret",
                "/DNDEBUG", // to use DEBUG or _DEBUG, we'll need Python's debug binaries! NOT DEBUG SYMBOLS
                "/D_NDEBUG",
                "/experimental:c11atomics", // need this for <stdatomic.h>
                "/F0x10485100",
                "/favor:INTEL64",
                "/fp:strict",
                "/fpcvt:IA",
                "/Gw",
                "/IC:/Program Files/Python312/include/", // this miraculously did not require the JSON quote escape gymnastics
                "/MP",
                "/MT",
                "/Qpar",
                "/Zc:preprocessor",
                "/Zi",
                "/nologo",
                "/O2",
                "/Ot",
                "/TC",
                "/Wall",
                "/wd4710", // not inlined
                "/wd4711", // selected for inlining
                "/wd4820", // struct padding
                "/std:clatest",
                "/Fe${fileDirname}/${fileBasenameNoExtension}.exe",
                "${file}",
                "/link /DEBUG:NONE /LIBPATH:\\\"C:/Program Files/Python312/libs\\\"" // use triple backslashes to escape
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
